# BFLOW AI Environment Configuration

# =============================================================================
# Ollama Configuration
# =============================================================================
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# Model Configuration
# =============================================================================
CLASSIFIER_MODEL=qwen2.5:0.5b
GENERATION_MODEL=qwen2.5:3b

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
USE_REDIS=true

# =============================================================================
# Cache Configuration
# =============================================================================
ENABLE_LLM_CACHE=true
CACHE_TTL=3600
MAX_CACHE_SIZE=100
CACHE_SIMULATE_DELAY=0.02
CACHE_CHARS_PER_CHUNK=1

# =============================================================================
# Semantic History Configuration
# =============================================================================
ENABLE_SEMANTIC_HISTORY=true
SEMANTIC_MODE=hybrid
SEMANTIC_ALPHA=0.7
SEMANTIC_SIMILARITY_THRESHOLD=0.85

# =============================================================================
# Ollama Generation Options (JSON format)
# =============================================================================
OLLAMA_OPTIONS={"num_ctx": 2048, "temperature": 0.3, "top_p": 0.9, "top_k": 40, "repeat_penalty": 1.1, "num_thread": 4}
